<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:com.android.support="http://schemas.android.com/apk/res-auto"
    android:padding="15dp">
<ImageView
    android:id="@+id/psa"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:src = "@drawable/watch"
    />


<TextView
    android:id="@+id/username"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="28dp"
    android:text="한결"
    android:textSize="18dp"
    com.android.support:layout_constraintLeft_toRightOf="@+id/psa"
    com.android.support:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/level"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:text="Lv. 17"
    android:textSize="18dp"
    com.android.support:layout_constraintLeft_toRightOf="@+id/username"
    com.android.support:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:text="먹잘알"
    android:textSize="18dp"
    com.android.support:layout_constraintLeft_toRightOf="@+id/level"
    com.android.support:layout_constraintTop_toTopOf="parent" />


<TextView
    android:id="@+id/progress"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="28dp"
    android:textSize="18dp"
    android:layout_marginTop="10dp"
    android:text="45/50"
    com.android.support:layout_constraintLeft_toRightOf="@+id/psa"
    com.android.support:layout_constraintTop_toBottomOf="@+id/username" />

<TextView
    android:id="@+id/followers"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:textSize="18dp"
    android:layout_marginTop="10dp"
    android:text="15k"
    com.android.support:layout_constraintLeft_toRightOf="@+id/progress"
    com.android.support:layout_constraintTop_toBottomOf="@+id/username" />

<TextView
    android:id="@+id/followings"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:textSize="18dp"
    android:layout_marginTop="10dp"
    android:text="15k"
    com.android.support:layout_constraintLeft_toRightOf="@+id/followers"
    com.android.support:layout_constraintTop_toBottomOf="@+id/username" />

</android.support.constraint.ConstraintLayout>